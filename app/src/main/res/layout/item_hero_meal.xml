<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_lg"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/corner_radius_md"
    app:cardElevation="@dimen/elevation_md">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Meal Image -->
        <ImageView
            android:id="@+id/ivHeroMealImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/cd_meal_image"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />

        <!-- Meal Info Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <!-- Badge -->
            <TextView
                android:id="@+id/tvHeroBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:background="@drawable/bg_badge"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="@string/meal_of_the_day"
                android:textAllCaps="true"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:letterSpacing="0.05" />

            <!-- Meal Title -->
            <TextView
                android:id="@+id/tvHeroMealTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                tools:text="Spicy Basil Pesto Pasta" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>