<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/meal_plan_item_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/meal_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/breakfast"
        android:textColor="@color/primary"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/meal_type"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Berry Smoothie Bowl"
        android:textSize="20sp"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:textColor="@color/text_primary"/>
    <TextView
        android:id="@+id/meal_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/meal_name"
        app:layout_constraintStart_toStartOf="@id/meal_name"
        android:text="15 min"
        android:textColor="@color/text_tertiary"
        android:fontFamily="@font/plus_jakarta_sans"
        android:textSize="16sp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/swap_btn"
        style="@style/Widget.Material3.Button"
        app:cornerRadius="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/swap"
        app:icon="@drawable/rotate_right"
        app:iconGravity="start"
        app:iconPadding="8dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:fontFamily="@font/plus_jakarta_sans_bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/meal_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/meal_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImage"
        tools:src="@tools:sample/backgrounds/scenic" />






</androidx.constraintlayout.widget.ConstraintLayout>