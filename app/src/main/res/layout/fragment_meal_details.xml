<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Back Button and Title -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/outline_arrow_back_ios_new_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/text_primary" />

            <TextView
                android:id="@+id/tvMealTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:textColor="@color/text_primary"
                android:textSize="26sp"
                android:ellipsize="end"
                android:maxLines="2"
                app:layout_constraintStart_toEndOf="@id/btnBack"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_favorite"
                tools:text="Delicious Spaghetti " />

            <ImageView
                android:id="@+id/btn_favorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/outline_favorite_24"
                app:layout_constraintBottom_toBottomOf="@id/tvMealTitle"
                app:layout_constraintTop_toTopOf="@id/tvMealTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/text_primary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- YouTube Player Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtube_player_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:autoPlay="false" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Ingredients Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:text="Ingredients"
            android:textColor="@color/primary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="6dp"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            tools:text="• 200g spaghetti\n• 100g pancetta\n• 2 large eggs\n• 50g parmesan cheese\n• Freshly ground black pepper\n• Salt to taste" />

        <!-- Instructions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:text="Instructions"
            android:textColor="@color/primary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="8dp"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            tools:text="1. Cook the spaghetti in a large pan of boiling salted water according to package instructions.\n\n2. Meanwhile, cut the pancetta into small pieces and fry in a little olive oil until crispy.\n\n3. In a bowl, beat the eggs with grated parmesan and plenty of black pepper.\n\n4. Drain the pasta, reserving a little cooking water, then quickly toss with the pancetta.\n\n5. Remove from heat and stir in the egg mixture, adding a little pasta water to create a creamy sauce.\n\n6. Serve immediately with extra parmesan and black pepper." />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>