                android:layout_marginStart="16dp"/>
            <include
                android:id="@+id/day7"
                layout="@layout/item_day"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        </HorizontalScrollView>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/today_schedule"
            android:padding="16dp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:textAlignment="textStart"/>

        <include
            android:id="@+id/breakfast_card"
            layout="@layout/meal_plan_item"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"/>

        <include
            android:id="@+id/lunch_card"
            layout="@layout/meal_plan_item"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"/>

        <include
            android:id="@+id/dinner_card"
            layout="@layout/meal_plan_item"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_dashed"
            android:gravity="center">
            <ImageButton
                android:id="@+id/add_snack_dessert"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/add"
                android:scaleType="fitCenter"
                app:tint="@color/text_tertiary"
                android:contentDescription="@string/add_snack_dessert"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_snack_dessert"
                android:textAlignment="center"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="14sp"
                android:textColor="@color/text_tertiary"/>

        </LinearLayout>

