<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="80dp"
    tools:context=".presentation.planner.view.PlannerFragment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">
            <TextView
                android:id="@+id/month_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text=""
                android:textSize="20sp"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:textColor="@color/text_primary"/>
            <ImageButton
                android:id="@+id/back_arrow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/arrow_left_"
                android:scaleType="fitEnd"
                app:tint="@color/text_primary"
                android:backgroundTint="@color/transparent"
                android:contentDescription="@string/go_back"/>
            <ImageButton
                android:id="@+id/right_arrow"
                android:contentDescription="@string/go_to_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/right_arrow_"
                app:tint="@color/text_primary"
                android:scaleType="centerInside"
                android:backgroundTint="@color/transparent"/>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <include
                android:id="@+id/day1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                layout="@layout/item_day"/>
            <include
                android:id="@+id/day2"
                layout="@layout/item_day"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"/>
            <include
                android:id="@+id/day3"
                layout="@layout/item_day"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"/>
            <include
                android:id="@+id/day4"
                layout="@layout/item_day"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"/>
            <include
                android:id="@+id/day5"
                layout="@layout/item_day"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"/>
            <include
                android:id="@+id/day6"
                layout="@layout/item_day"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"/>
            <include
                android:id="@+id/day7"
                layout="@layout/item_day"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        </HorizontalScrollView>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/today_schedule"
            android:padding="16dp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:textAlignment="textStart"/>

        <include
            android:id="@+id/breakfast_card"
            layout="@layout/meal_plan_item"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"/>

        <include
            android:id="@+id/lunch_card"
            layout="@layout/meal_plan_item"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"/>

        <include
            android:id="@+id/dinner_card"
            layout="@layout/meal_plan_item"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>