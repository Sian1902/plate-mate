<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_lg"
    android:layout_marginVertical="@dimen/spacing_xs"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/corner_radius_md"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/list_item_min_height"
        android:padding="@dimen/spacing_md">

        <!-- Meal Thumbnail -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivMealThumbnail"
            android:layout_width="@dimen/meal_thumbnail_size"
            android:layout_height="@dimen/meal_thumbnail_size"
            android:contentDescription="@string/cd_meal_image"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.MediumComponent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <!-- Content Container -->
        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivChevron"
            app:layout_constraintStart_toEndOf="@id/ivMealThumbnail"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Meal Title -->
            <TextView
                android:id="@+id/tvMealTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:maxLines="1"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                tools:text="Japanese Ramen" />

            <!-- Details -->
            <TextView
                android:id="@+id/tvMealDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/plus_jakarta_sans"
                android:maxLines="1"
                android:textColor="@color/text_tertiary"
                android:textSize="13sp"
                tools:text="30 mins • 600 kcal • Intermediate" />

            <!-- Tags Container -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:chipSpacingHorizontal="4dp"
                app:singleLine="true">

                <!-- Tags will be added dynamically -->
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <!-- Chevron Icon -->
        <ImageView
            android:id="@+id/ivChevron"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/cd_navigate_to_meal"
            android:src="@drawable/outline_keyboard_arrow_right_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/nav_inactive" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>