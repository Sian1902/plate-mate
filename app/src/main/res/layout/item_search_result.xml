<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/search_meal_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImage"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/search_meal_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text="Meal Name"
        android:textSize="16sp"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:textColor="@color/text_primary"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/search_meal_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_meal_image"/>

    <TextView
        android:id="@+id/search_meal_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Category"
        android:textSize="14sp"
        android:fontFamily="@font/plus_jakarta_sans"
        android:textColor="@color/text_tertiary"
        app:layout_constraintStart_toEndOf="@id/search_meal_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_meal_name"
        app:layout_constraintBottom_toBottomOf="@id/search_meal_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>